<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.gabriel.tcc.IndexActivity">


    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Cade Doutor"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/estado_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="30dp"/>


    <Spinner
        android:id="@+id/cidade_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/estado_spinner"
        android:layout_toEndOf="@+id/pesquisar_button"
        android:layout_marginBottom="30dp"/>

    <Spinner
        android:id="@+id/especialidade_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/estado_spinner"
        android:layout_gravity="bottom"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginBottom="30dp"/>

    <Spinner
        android:id="@+id/convenio_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/especialidade_spinner"
        android:layout_gravity="bottom"
        android:layout_toStartOf="@+id/textView"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:id="@+id/doutor_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/convenio_spinner"
        android:layout_alignStart="@+id/pesquisar_button"
        android:ems="10"
        android:hint="Doutor"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/pesquisar_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doutor_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Pesquisar" />


</LinearLayout>
